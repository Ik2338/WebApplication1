@model List<WebApplication1.Models.Produit>
@{
    ViewData["Title"] = "Nos Produits";
    ViewData["Icon"] = "fas fa-store";

    var categories = Model.Select(p => p.Categorie).Distinct().OrderBy(c => c).ToList();
    var produitsDisponibles = Model.Where(p => p.Quantite > 0).ToList();
}

<!-- Statistiques -->
<div class="row mb-5">
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-box fa-3x text-primary mb-3"></i>
                <h3 class="mb-0">@Model.Count</h3>
                <p class="text-muted mb-0">Produits au total</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h3 class="mb-0">@produitsDisponibles.Count</h3>
                <p class="text-muted mb-0">Produits disponibles</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-tags fa-3x text-warning mb-3"></i>
                <h3 class="mb-0">@categories.Count</h3>
                <p class="text-muted mb-0">Catégories</p>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <!-- Empty State -->
    <div class="empty-state">
        <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
        <h3 class="text-muted mb-3">Aucun produit disponible</h3>
        <p class="text-muted">Revenez plus tard pour découvrir nos produits.</p>
    </div>
}
else
{
    <!-- Filtres -->
    <div id="categories" class="mb-5">
        <h2 class="text-center mb-4">Filtrer par catégorie</h2>
        <div class="d-flex flex-wrap justify-content-center gap-2 mb-4">
            <button type="button" class="btn filter-btn btn-outline-primary active" data-category="all">
                Tous les produits
            </button>
            @foreach (var category in categories)
            {
                <button type="button" class="btn filter-btn btn-outline-secondary" data-category="@category">
                    @category
                </button>
            }
        </div>
    </div>

    <!-- Barre de recherche -->
    <div class="row mb-5">
        <div class="col-md-6 offset-md-3">
            <div class="input-group shadow-sm">
                <span class="input-group-text bg-white border-end-0">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" id="searchInput" 
                       placeholder="Rechercher un produit...">
            </div>
        </div>
    </div>

    <!-- Produits Grid -->
    <div id="produits" class="mb-5">
        <h2 class="text-center mb-4">Nos Produits</h2>
        
        <div class="row" id="productsGrid">
            @foreach (var produit in Model.Where(p => p.Quantite > 0).OrderByDescending(p => p.DateCreation))
            {
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4 product-item" 
                     data-category="@produit.Categorie"
                     data-name="@produit.Nom.ToLower()"
                     data-description="@(produit.Description?.ToLower() ?? "")">
                    
                    <div class="card product-card">
                        <!-- Image du produit -->
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(produit.ImageUrl))
                            {
                                <img src="@produit.ImageUrl" class="card-img-top product-image" alt="@produit.Nom">
                            }
                            else
                            {
                                <div class="card-img-top product-image bg-light d-flex align-items-center justify-content-center">
                                    <i class="fas fa-box fa-4x text-gray-400"></i>
                                </div>
                            }
                            
                            <!-- Badge de disponibilité -->
                            <div class="availability-badge">
                                @if (produit.Quantite > 10)
                                {
                                    <span class="badge stock-badge bg-success">
                                        <i class="fas fa-check me-1"></i>En stock
                                    </span>
                                }
                                else if (produit.Quantite > 0)
                                {
                                    <span class="badge stock-badge bg-warning">
                                        <i class="fas fa-exclamation me-1"></i>Stock limité
                                    </span>
                                }
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <!-- Catégorie -->
                            <div class="mb-2">
                                <span class="badge category-badge">@produit.Categorie</span>
                            </div>
                            
                            <!-- Nom du produit -->
                            <h5 class="card-title mb-2">@produit.Nom</h5>
                            
                            <!-- Description -->
                            <p class="card-text text-muted flex-grow-1 mb-3">
                                @if (!string.IsNullOrEmpty(produit.Description))
                                {
                                    @(produit.Description.Length > 80 ? produit.Description.Substring(0, 80) + "..." : produit.Description)
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Aucune description</span>
                                }
                            </p>
                            
                            <!-- Prix et actions -->
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="price-tag">@produit.Prix.ToString("C")</div>
                                    <small class="text-muted">
                                        <i class="fas fa-box me-1"></i>@produit.Quantite restants
                                    </small>
                                </div>
                                
                                <!-- Boutons CLIENT uniquement -->
                                <div class="d-grid gap-2">
                                    <form method="post" asp-controller="Panier" asp-action="Ajouter" class="d-inline w-100">
                                        <input type="hidden" name="produitId" value="@produit.Id" />
                                        <input type="hidden" name="nom" value="@produit.Nom" />
                                        <input type="hidden" name="prix" value="@produit.Prix" />
                                        <input type="hidden" name="quantite" value="1" />
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="fas fa-cart-plus me-2"></i>Ajouter au panier
                                        </button>
                                    </form>
                                    <button class="btn btn-outline-secondary" onclick="voirDetails(@produit.Id)">
                                        <i class="fas fa-info-circle me-2"></i>Détails
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Message aucun résultat -->
        <div id="noResults" class="text-center py-5" style="display: none;">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Aucun produit trouvé</h4>
            <p class="text-muted">Essayez de modifier votre recherche ou filtre</p>
        </div>
    </div>

    <!-- Section produits en rupture -->
    {
        var produitsRupture = Model.Where(p => p.Quantite == 0).ToList();
        if (produitsRupture.Any())
        {
            <div class="alert alert-info">
                <h5><i class="fas fa-info-circle me-2"></i>Produits actuellement en rupture</h5>
                <p class="mb-2">Ces produits sont temporairement indisponibles :</p>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var produit in produitsRupture.Take(5))
                    {
                        <span class="badge bg-secondary">@produit.Nom</span>
                    }
                    @if (produitsRupture.Count > 5)
                    {
                        <span class="text-muted">et @(produitsRupture.Count - 5) autres...</span>
                    }
                </div>
            </div>
        }
    }
}

@section Styles {
    <style>
        .product-card {
            transition: all 0.3s ease;
            border: 1px solid #e3e6f0;
            border-radius: 10px;
            overflow: hidden;
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            border-color: #4e73df;
        }

        .product-image {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .stock-badge {
            font-size: 0.8em;
            font-weight: 600;
        }

        .price-tag {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1cc88a;
        }

        .category-badge {
            background-color: #f8f9fa;
            color: #6c757d;
            border: 1px solid #dee2e6;
        }

        .filter-btn {
            border-radius: 20px;
            padding: 0.5rem 1.5rem;
            transition: all 0.3s;
        }

        .filter-btn.active {
            background-color: #4e73df;
            color: white;
            border-color: #4e73df;
        }

        .availability-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1;
        }

        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
            background-color: #f8f9fa;
            border-radius: 10px;
        }

        @@media (max-width: 768px) {
            .product-image {
                height: 150px;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            let products = $('.product-item');
            
            // Filtrage par catégorie
            $('.filter-btn').click(function() {
                $('.filter-btn').removeClass('active btn-primary').addClass('btn-outline-secondary');
                $(this).removeClass('btn-outline-secondary').addClass('active btn-primary');
                filterProducts();
            });
            
            // Recherche
            $('#searchInput').on('keyup', function() {
                filterProducts();
            });
            
            function filterProducts() {
                const searchTerm = $('#searchInput').val().toLowerCase();
                const selectedCategory = $('.filter-btn.active').data('category');
                let visibleCount = 0;
                
                products.each(function() {
                    const $product = $(this);
                    const productName = $product.data('name');
                    const productDesc = $product.data('description');
                    const productCategory = $product.data('category');
                    
                    const matchesSearch = searchTerm === '' || 
                                         productName.includes(searchTerm) || 
                                         productDesc.includes(searchTerm);
                    
                    const matchesCategory = selectedCategory === 'all' || 
                                           productCategory === selectedCategory;
                    
                    const isVisible = matchesSearch && matchesCategory;
                    
                    $product.toggle(isVisible);
                    if (isVisible) visibleCount++;
                });
                
                $('#noResults').toggle(visibleCount === 0);
            }
            
            // Fonction pour voir les détails
                    window.voirDetails = function(productId) {
            // Redirige vers l'action "Details" du contrôleur "Home" (ou "Produits")
            window.location.href = '/Home/Details/' + productId;
        };
        });
    </script>
}