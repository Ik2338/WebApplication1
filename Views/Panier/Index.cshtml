@model List<WebApplication1.ViewModels.PanierItemViewModel>

@{
    ViewData["Title"] = "Mon Panier";
    ViewData["Icon"] = "fas fa-shopping-cart";

    // Calculer les totaux
    var total = Model?.Sum(i => i.Total) ?? 0;
    var nbArticles = Model?.Sum(i => i.Quantite) ?? 0;
}

<div class="container py-4">
    <h1 class="page-title">
        <i class="fas fa-shopping-cart me-2"></i>Mon Panier
    </h1>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
            <h3 class="text-muted mb-3">Votre panier est vide</h3>
            <p class="text-muted mb-4">Ajoutez des produits pour les voir apparaître ici.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-store me-2"></i>Voir les produits
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Liste des articles -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Prix unitaire</th>
                                        <th>Quantité</th>
                                        <th>Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Nom</strong><br>
                                                <small class="text-muted">ID: @item.ProduitId</small>
                                            </td>
                                            <td>@item.Prix.ToString("C")</td>
                                            <td>
                                                <form method="post" asp-controller="Panier" asp-action="Modifier" class="d-inline">
                                                    <input type="hidden" name="produitId" value="@item.ProduitId" />
                                                    <div class="input-group" style="width: 150px;">
                                                        <input type="number" name="nouvelleQuantite"
                                                               value="@item.Quantite" min="1" max="99"
                                                               class="form-control form-control-sm" />
                                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-sync-alt"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td class="fw-bold text-success">@item.Total.ToString("C")</td>
                                            <td>
                                                <form method="post" asp-controller="Panier" asp-action="Supprimer"
                                                      class="d-inline"
                                                      onsubmit="return confirm('Supprimer \u0022@item.Nom\u0022 du panier ?');">
                                                    <input type="hidden" name="produitId" value="@item.ProduitId" />
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'actions -->
                <div class="d-flex flex-wrap gap-2 mb-4">
                    <form method="post" asp-controller="Panier" asp-action="Vider"
                          onsubmit="return confirm('Vider tout le panier ?');" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>Vider le panier
                        </button>
                    </form>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-store me-2"></i>Continuer mes achats
                    </a>
                </div>
            </div>

            <!-- Récapitulatif -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Récapitulatif</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Nombre d'articles :</span>
                            <strong>@nbArticles</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Sous-total :</span>
                            <strong>@total.ToString("C")</strong>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5">Total :</span>
                            <span class="h4 text-success fw-bold">@total.ToString("C")</span>
                        </div>

                        <form method="post" asp-controller="Panier" asp-action="Commander" class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Passer commande
                            </button>
                        </form>

                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle me-2"></i>
                            Les frais de livraison seront calculés lors de la commande.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .empty-state {
            background-color: #f8f9fa;
            border-radius: 15px;
        }

        .table tbody tr:hover {
            background-color: rgba(0,0,0,.02);
        }

        .input-group {
            width: 150px;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .page-title {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 3px solid #4e73df;
        }
    </style>
}